    <div class="formContainer">
      <div class="wrapper">
        <form method="POST" action="/userdetails"> 
          <h1>Your Details</h1>
          <% error.forEach(errors => { %>
                 
            <div class="alert alert-dark alert-dismissible fade show" role="alert">
                 <%= errors.msg %> 
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
        <% }) %>
          <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control" id="staticEmail"  value=" <%= username %>">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="firstName" value="<%= firstName %>" > 
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="lastName" value="<%= lastName %>" >  
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email Id</label>
            <div class="col-sm-10">
              <input type="text" class="form-control " name="email" value="<%= emailId %>" readonly> 
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Contact Number</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" name="contact" value="<%= contact %>" > 
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
              <input type="text" class="form-control"  name="address" value="<%= address %>" > 
            </div>
          </div>
          
          <div style="text-align: center;">
            <button type="submit" class="btn btn-outline-success">Update</button>
            <button type="reset" class="btn btn-outline-success">Reset</button>
          </div>  
        </form>
        <div style="text-align: center; padding-top: .5rem;">
          <a href="/products"> <button class="btn btn-outline-success"> Products </button></a>
        </div>
        <div style="text-align: center; padding-top: .5rem;">
          <a href="/updatepassword"> <button class="btn btn-outline-success"> Update Password </button></a>
        </div>
        
      </div>
      
    </div>



